<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/compassRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#F7F6FB">

    <!-- Toolbar -->
    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarCompass"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:background="#FDE7EF"
        android:title="Compass"
        android:titleTextColor="#4A4A4A"
        android:paddingTop="28dp"
        android:paddingBottom="12dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <!-- Content block -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="20dp">

        <!-- Compass image -->
        <ImageView
            android:id="@+id/compassImage"
            android:layout_width="260dp"
            android:layout_height="260dp"
            android:layout_marginTop="40dp"
            android:src="@drawable/compass"
            android:contentDescription="Compass Image" />

        <!-- Heading text -->
        <TextView
            android:id="@+id/bearingText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Heading: 0Â°"
            android:textSize="28sp"
            android:textColor="#4A4A4A"
            android:textStyle="bold"
            android:layout_marginTop="30dp" />

    </LinearLayout>

</LinearLayout>
