<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"
    android:background="#F7F6FB">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="24dp"
        android:gravity="top|center_horizontal">

        <!-- ðŸ”¥ Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="#FDE7EF"
            android:titleTextColor="#4A4A4A"
            app:title="Child Tracker"
            app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

        <!-- Title -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Child Tracker"
            android:textSize="28sp"
            android:textStyle="bold"
            android:textColor="#4A4A4A"
            android:layout_marginBottom="20dp" />

        <!-- Card -->
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            app:cardCornerRadius="22dp"
            app:cardElevation="4dp"
            app:cardBackgroundColor="#FFFFFF">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="ðŸ“ Current Location"
                    android:textColor="#4A4A4A"
                    android:textStyle="bold"
                    android:textSize="20sp"
                    android:layout_marginBottom="12dp" />

                <TextView
                    android:id="@+id/latlngText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Latitude: --&#10;Longitude: --"
                    android:textColor="#4A4A4A"
                    android:textSize="18sp"
                    android:layout_marginBottom="10dp" />

                <TextView
                    android:id="@+id/addressText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Address: --"
                    android:textColor="#6A6A6A"
                    android:textSize="16sp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <!-- Buttons -->
        <Button
            android:id="@+id/shareButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Share My Location"
            android:textSize="18sp"
            android:textColor="#4A4A4A"
            android:backgroundTint="#BFE3FF"
            android:layout_marginBottom="14dp"
            android:stateListAnimator="@null" />

        <Button
            android:id="@+id/historyButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="View History"
            android:textSize="18sp"
            android:textColor="#4A4A4A"
            android:backgroundTint="#F8C8DC"
            android:layout_marginBottom="14dp"
            android:stateListAnimator="@null" />

        <Button
            android:id="@+id/clearHistoryButton"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:text="Clear History"
            android:textSize="18sp"
            android:textColor="#4A4A4A"
            android:backgroundTint="#E0E0E0"
            android:layout_marginBottom="30dp"
            android:stateListAnimator="@null" />

        <!-- SOS BUTTON -->
        <Button
            android:id="@+id/sosButton"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:text="SOS"
            android:textSize="34sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/sos_pastel_bg"
            android:gravity="center"
            android:layout_marginBottom="40dp"
            android:elevation="6dp" />

    </LinearLayout>

</ScrollView>
